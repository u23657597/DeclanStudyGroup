
@model IEnumerable<DeclanStudyGroup.Models.MyClass>

@{
    ViewBag.Title = "StudyGroup";
}

<link href="../Content/StyleSheet1.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/MyScript.js"></script>

<h2>StudyGroup</h2>

<table class="StudyGroupTable">
    <tr>
        <th>Student No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Link</th>
        <th>Delete</th>
    </tr>


   @foreach (var item in Model)
    {
       <tr>
           <td>@Html.DisplayFor(modelItem => item.StudentNum)</td>
           <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
           <td>@Html.DisplayFor(modelItem => item.LastName)</td>
           <td>@Html.DisplayFor(modelItem => item.Email)</td>
           <td>
               <button><a href="@Url.Content(item.MyLink)" class="btn-link">Link</a></button>
           </td>
           <td>
               <button class="btn-Delete" onclick="DeleteRow(this)">Delete</button>
           </td>
       </tr>
    }

</table>